{% set product = item.variant.product %}
<tr>
    <td>{{ loop.index }}</td>
    <td>
        <a href="{{ path('sylius_product_show', {'slug': product.slug}) }}" style="width: 90px;">
            <img src="{{ product.image ? product.image.path|imagine_filter('sylius_90x60') : 'http://placehold.it/90x60' }}" alt="" class="img-rounded" />
        </a>
    </td>
    <td>
        <a href="{{ path('sylius_product_show', {'slug': product.slug}) }}"><strong>{{ product.name }}</strong></a>
        <br>
        <br>
        {% if product.hasOptions %}
            <ul>
            {% for option in item.variant.options %}
            <li><strong>{{ option.presentation }}</strong>: {{ option.value }}</li>
            {% endfor %}
            </ul>
        {% endif %}
    </td>
    <td class="col-md-2">
        {{ form_row(form.items[loop.index0].quantity, {'label': false}) }}
    </td>
    <td class="col-md-1">
        <a href="{{ path('sylius_cart_item_remove', {'id': item.id}) }}" class="btn btn-danger"><i class="icon-trash icon-white"></i></a>
    </td>
    <td class="col-md-1">
        {{ item.unitPrice|sylius_price }}
    </td>
    <td class="col-md-1" style="text-align: right">
        {{ item.total|sylius_price }}
    </td>
</tr>
